char* change1(char *c)
{
    if( c == NULL) return NULL;
    int len = strlen(c);
    if( len == 0) return NULL;
    int inct = 0;
    int i;
    for(i = 0; i<len; i++)
    {
        if(c[i] == ' ')
            inct++;
    }
    int p = 0;
    char *cc = new char[len+2*inct+1];
    for(i=0; i<len; i++)
    {
        if(c[i] == ' ')
        {
            cc[p++] = '%';
            cc[p++] = '2';
            cc[p++] = '0';
        }
        else
        {
            cc[p++] = c[i];
        }
    }
    cc[p] = '\0';
    return cc;
}

int main()
{
    char s[] = "sa f a s";
    char *c = change1(s);
    cout<< c <<'\n'<<endl;
    
  
}
