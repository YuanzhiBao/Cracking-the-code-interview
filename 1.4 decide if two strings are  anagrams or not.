#include<iostream>
#include<cstring>
using namespace std;

bool comparetwostring1(string s, string t)
{
    if(s == "" || t == "") return false;
    if(s.length() != t.length()) return false;
    
    sort(&s[0], &s[0] + s.length());
    sort(&t[0], &t[0] + t.length());
    if(s ==t) return true;
    else return false;
}

bool comparetwostring2(string s, string t)
{
    if(s =="" || t == "") return false;
    if(s.length() != t.length()) return false;
    int c[256]; //这里要注意是int型的表示ascii码.不是bool。 bool型不能进行多于一次的++的动作.
    int i;
    memset(c, 0, sizeof(c));
    for(i = 0; i<s.length(); i++)
    {
        ++c[s[i]];
        --c[t[i]];
    }
    for(i = 0; i<256; i++)
    {
        if(c[i] != 0) return false;
    }
    return true;
}

int main()
{
    string s = "safas";
    string t = "asfas";
    char c[] = "asfasfda";
    cout<<sizeof(c);
    cout<<s[5]<<'\n';
    cout<<comparetwostring1(s, t)<<'\n'<<endl;
    cout<<comparetwostring2(s, t)<<'\n'<<endl;
}
